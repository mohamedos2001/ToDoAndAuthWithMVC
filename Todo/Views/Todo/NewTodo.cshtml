@model Todo


@{
	var action = (Model == null) ? "SaveNewTodo" : "SaveUpdatedTodo";
	var op = (Model == null) ? "Create" : "Update";

}

<div class="w-100">
	<h1>@op Todo</h1>
	<div asp-validation-summary="All"></div>
	<form asp-action="@action" asp-controller="Todo" asp-route-id="@Model?.Id">
		<div>
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="Description"></label>
			<input asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="CategoryId"></label>
			<select class="form-control mt-2" asp-for="CategoryId">
				@foreach(var cate in ViewData["cate"] as List<Category>)
				{
					<option value="@cate.Id">@cate.Name</option>
				}
			</select>
			<span asp-validation-for="CategoryId" class="text-danger"></span>
		</div>

		<input type="submit" class="btn btn-primary mt-5" />
	</form>

</div>