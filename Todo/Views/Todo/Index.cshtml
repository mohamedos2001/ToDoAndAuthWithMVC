
@model List<Todo>


<div class="w-100">
    <a asp-action="NewTodo" asp-controller="Todo" class="btn btn-primary mb-5">New Todo</a>
    @if (Model.Count() == 0)
    {
        <h1 class="text-center">There Are No Todos !</h1>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">CreateDate</th>
                    <th scope="col">Is Done</th>
                    <th scope="col">Category</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var todo in Model)
                {
                    <tr>
                        <td>@todo.Id</td>
                        <td>@todo.Name</td>
                        <td>@todo.Description</td>
                        <td>@todo.CreatedDate</td>
                        @if (todo.IsDone)
                        {
                            <td><img src="~/images/checked.png" /></td>
                        }
                        else
                        {
							<td><img src="~/images/remove.png" /></td>
                        }
                        <td>
                            @if(todo.Category is null)
                            {
                                <p>Na</p>
                            }
                            else
                            {
                                @todo?.Category?.Name
                            }
                        </td>
                        <td>
                            <a asp-action="EditTodo" asp-route-id="@todo.Id">
								<img src="~/images/edit.png" />
                            </a>
                            <a asp-action="DeleteTodo" asp-route-id="@todo.Id">
								<img src="~/images/delete.png" />
                            </a>
                            <a asp-action="ToggleTodo" asp-route-id="@todo.Id">
								<img src="~/images/checklist.png" />
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>