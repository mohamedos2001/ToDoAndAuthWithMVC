<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Todo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Todo.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="mt-3">
        <nav class="navbar navbar-light container d-flex justify-content-between">
            <div>
                <a class="navbar-brand" href="#">
                    <img src="~/images/logo.png" />
                    Todo
                </a>
            </div>
            <div class="d-flex justify-content-between fs-4 gx-4">
                <a asp-action="Index" asp-controller="Todo" class="mx-2 alink">Todos</a>
                @if (User.HasClaim(ClaimTypes.Role, "Admin"))
                {
                    <a asp-action="Index" asp-controller="Category" class="mx-2 alink">Category</a>
                }
       
                @if(User?.Identity?.IsAuthenticated == false)
                {
                    <a asp-action="Login" asp-controller="Account" class="mx-2 alink">Login</a>
                    <a asp-action="Register" asp-controller="Account" class="mx-2 alink">Register</a>
                }
                else
                {
                    <a asp-action="Logout" class="mx-2 alink" asp-controller="Account">Log Out</a>
                }

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 d-flex flex-column justify-content-center align-items-center content w-75 mx-auto">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
