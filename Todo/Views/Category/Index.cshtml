@model List<Category>

<div class="w-100">
    <a asp-action="NewCategory" asp-controller="Category" class="btn btn-primary mb-5">New Category</a>
    @if (Model.Count() == 0)
    {
        <h1 class="text-center">There Are No Categories !</h1>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cate in Model)
                {
                    <tr>
                        <td>@cate.Id</td>
                        <td>@cate.Name</td>
                        <td>
                            <a asp-action="EditCategory" asp-route-id="@cate.Id">
                                <img src="~/images/edit.png" />
                            </a>
                            <a asp-action="DeleteCategory" asp-route-id="@cate.Id">
                                <img src="~/images/delete.png" />
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>
